@{
    ViewBag.Title = "Home Page";
}
<div>
    @if (ViewBag.Mensagem != null)
    {
        <h3>@ViewBag.Mensagem.ToString()</h3>
    }
    
    @if (ViewBag.Erro != null)
    {
        <h3 style="background-color:red;">@ViewBag.Erro.ToString()</h3>
    }


    <form method="post" enctype="multipart/form-data" class="form-horizontal my-form" action="@Url.Action("ImportarArquivos", "Home")">
        <div class="form-group col-xs-12">
            <input type="file" id="file1" name="file1" />
        </div>
        <div class="form-group col-xs-12">
            <input type="submit" value="Importar Arquivos" title="Importar Arquivos" />
        </div>
    </form>
